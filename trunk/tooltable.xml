<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs title="tooltable" height="380">
      <Require feature="dynamic-height" />
    </ModulePrefs>
    <UserPref name="img" datatype="string" required="true" />
    <UserPref name="jws" datatype="bool" default_value="true" />
    <Content type="html">
<![CDATA[
<table width="96%">
<tr>
<td width="50%" align="left" valign="top">
<ul>
<li><a id="jws" title="Java Web Start"><img width="88" height="23" src="http://lh4.ggpht.com/_9Z4BYR88imo/TRD2KGq73BI/AAAAAAAAAwA/N8-6EXongNk/s800/webstart.png" title="Java Web Start" alt="Launch" /></a></li>
<li><a id="jar">Runnable JAR(example.jar)</a></li>
<li><a id="src">Source code(src.zip)</a></li>
<li><a id="svn">Repository(svn repository)</a></li>
</ul>
<p><img src="__UP_img__" /></p>
</td>
<td align="right" valign="top">
<script async src="http://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- xrea, 336x280, 09/11/04 -->
<ins class="adsbygoogle"
     style="display:inline-block;width:336px;height:280px"
     data-ad-client="ca-pub-6939179021013694"
     data-ad-slot="9248548235"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
</td>
</tr>
</table>
<script type="text/javascript">
    var BASE = "http://terai.xrea.jp/swing/";
    var prefs = new gadgets.Prefs();
    var imgpath = prefs.getString("img");
    var folder = imgpath.substring(imgpath.lastIndexOf("/"), imgpath.lastIndexOf("."));
    var dir = folder.toLowerCase();

    var elm = document.getElementById("jws");
    elm.setAttribute("href", BASE + dir + "/example.jnlp");
    elm.setAttribute("onclick", "_gaq.push(['_trackEvent', 'WebStart', 'Launch', 'Swing/" + folder + "']);");

    if(prefs.getBool("jws")==false) {
       var p = elm.parentNode;
       p.parentNode.removeChild(p);
    }

    elm = document.getElementById("jar");
    elm.setAttribute("href", BASE + dir + "/example.jar");
    elm.setAttribute("onclick", "_gaq.push(['_trackEvent', 'Jar', 'Download', 'Swing/" + folder + "']);");

    elm = document.getElementById("src");
    elm.setAttribute("href", BASE + dir + "/src.zip");
    elm.setAttribute("onclick", "_gaq.push(['_trackEvent', 'Source', 'Download', 'Swing/" + folder + "']);");

    elm = document.getElementById("svn");
    elm.setAttribute("href", "http://java-swing-tips.googlecode.com/svn/trunk/" + folder);
    elm.setAttribute("onclick", "_gaq.push(['_trackEvent', 'Subversion', 'View', 'Swing/" + folder + "']);");

    gadgets.util.registerOnLoadHandler(function() {
       gadgets.window.adjustHeight();
    });
</script>
]]>
    </Content>
</Module>
